<h1>Listing books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.year %></td>
        
        <td><%= link_to 'Show', book, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_book_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Book
<% end %>